<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" stylesheets="@Payment.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CardPaymentController">

    <Label styleClass="header-label" text="Credit Card Payment" />

    <TextField fx:id="transactionIdField" promptText="Enter Bank" styleClass="input-field" />

    <TextField fx:id="cardNumberField" promptText="Enter Card Number" styleClass="input-field" />

    <Label fx:id="statusLabel" styleClass="status-label" />

    <Button onAction="#handleConfirmPayment" styleClass="action-button" text="Confirm Payment" />
</VBox>
