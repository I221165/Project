<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.PaymentController" stylesheets="@Payment.css">

    <Label text="Parcel Payment" styleClass="header-label"/>

    <ComboBox fx:id="parcelIdComboBox" promptText="Select Parcel ID" styleClass="input-field"/>

    <Button text="Proceed to Payment" onAction="#handlePayment" styleClass="action-button"/>

    <HBox fx:id="paymentOptionsBox" alignment="CENTER" spacing="10" visible="false">
        <Button text="Cash" onAction="#handleCashPayment" styleClass="action-button"/>
        <Button text="Credit Card" onAction="#handleCardPayment" styleClass="action-button"/>
        <Button text="Online Transaction" onAction="#handleOnlinePayment" styleClass="action-button"/>
    </HBox>

    <Label fx:id="statusLabel" styleClass="status-label"/>

</VBox>

