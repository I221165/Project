<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.RegisterDriverController" stylesheets="@6.css" styleClass="root">
    <children>
        <TextField fx:id="driverNameField" promptText="Enter Driver Name" styleClass="input-field" />
        <TextField fx:id="passwordField" promptText="Enter Password" styleClass="input-field" />
        <TextField fx:id="emailField" promptText="Enter Email" styleClass="input-field" />
        <TextField fx:id="cnicField" promptText="Enter CNIC (13 digits)" styleClass="input-field" />
        <TextField fx:id="phoneField" promptText="Enter Phone Number (11 digits)" styleClass="input-field" />
        <ComboBox fx:id="driverTypeComboBox" promptText="Select Driver Type" styleClass="input-field" />
        <ComboBox fx:id="cityComboBox" promptText="Select City" styleClass="input-field" />
        <Button text="Register Driver" onAction="#registerDriver" styleClass="submit-button" />
    </children>
</VBox>
