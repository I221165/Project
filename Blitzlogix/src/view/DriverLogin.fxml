<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="15" 
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.DriverLoginController"
      stylesheets="@4.css" styleClass="root">

    <!-- Username Field -->
    <TextField fx:id="usernameField" promptText="Enter Username" styleClass="input-field" />
    
    <!-- Password Field -->
    <PasswordField fx:id="passwordField" promptText="Enter Password" styleClass="input-field" />
    
    <!-- Login Button -->
    <Button onAction="#handleLogin" text="Login" styleClass="button-primary" />

</VBox>
