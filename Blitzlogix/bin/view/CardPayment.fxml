
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.CardPaymentController"  stylesheets="@Payment.css">

    <Label text="Credit Card Payment" styleClass="header-label"/>

    <TextField fx:id="transactionIdField" promptText="Enter Transaction ID" styleClass="input-field"/>

    <TextField fx:id="cardNumberField" promptText="Enter Card Number" styleClass="input-field"/>

    <Label fx:id="statusLabel" styleClass="status-label"/>

    <Button text="Confirm Payment" onAction="#handleConfirmPayment" styleClass="action-button"/>
</VBox>
