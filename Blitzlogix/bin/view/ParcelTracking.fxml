<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ParcelTrackingController" stylesheets="@ParcelTracking.css">
    <children>
        <VBox spacing="10" prefWidth="1200" prefHeight="700" styleClass="root">
            <!-- Title -->
            <Label text="Parcel Tracking History" styleClass="header-label" />
            
            <!-- Table for Parcel Tracking History -->
            <TableView fx:id="trackingTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="eventIdColumn" text="Event ID" />
                    <TableColumn fx:id="parcelIdColumn" text="Parcel ID" />
                    <TableColumn fx:id="statusColumn" text="Status" />
                    <TableColumn fx:id="timestampColumn" text="Timestamp" />
                </columns>
            </TableView>
            
            <!-- Back Button -->
            <Button text="Back" fx:id="backButton" onAction="#handleBackButton" />
        </VBox>
    </children>
</AnchorPane>
